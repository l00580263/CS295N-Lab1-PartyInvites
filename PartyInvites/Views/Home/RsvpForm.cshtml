@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
}



<!DOCTYPE HTML>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rsvp Form</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link />
</head>

<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body">
            
            <form class="p-a-1" asp-action="RsvpForm" method="post">
                <div asp-validation-summary="All"></div>

                <div class="form-group">
                    <label asp-for="Name">Your Name:</label>
                    <input class="form-control" asp-for="Name" />
                </div>

                <div class="form-group">
                    <label asp-for="Email">Your Email:</label>
                    <input class="form-control" asp-for="Email" />
                </div>

                <div class="form-group">
                    <label asp-for="Phone">Your Phone:</label>
                    <input class="form-control" asp-for="Phone" />
                </div>

                <div class="form-group">
                    <label>Will You Attend?</label>
                    <select class="form-control" asp-for="WillAttend">
                        <option value="">Choose An option</option>
                        <option value="true">I'll Be There</option>
                        <option value="false">I Can't Come</option>
                    </select>
                </div>

                <div class="text-center">
                    <button class="btn btn-primary" type="submit">Submit RSVP</button>
                </div>
                
            </form>

        </div>
    </div>
</body>
</html>